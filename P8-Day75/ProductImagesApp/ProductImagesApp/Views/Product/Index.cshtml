@model IEnumerable<ProductImagesApp.Models.Product>

<h4>Employee Index</h4>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MainImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i> New Product</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <img src="~/img/@product.MainImage" width="100" height="100" />
                </td>
                <td>
                    @product.ProductName
                </td>
                <td>
                    @product.Price
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@product.ProductId" class="btn btn-warning"> Edit </a>
                    <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger ml-1"
                       onclick="return confirm('Are you sure to delete this record ? ')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>