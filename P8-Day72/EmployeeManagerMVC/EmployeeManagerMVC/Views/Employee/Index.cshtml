@model IEnumerable<EmployeeManagerMVC.Models.Employee>

<h4>Employee Index</h4>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Employee</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    <img src="~/img/@employee.Image" width="100" height="100" />
                </td>
                <td>
                    @employee.FullName
                </td>
                <td>
                    @employee.Department.DepartmentName
                </td>
                <td>
                    @employee.Salary
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@employee.Id" class="btn btn-warning"> Edit </a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger ml-1"
                       onclick="return confirm('Are you sure to delete this record ? ')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>